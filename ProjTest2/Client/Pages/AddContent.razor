@page "/AddContent"

<PageTitle>AddContent</PageTitle>

<RadzenContent Container="main">
  <ChildContent>
     <div class="row">
      <div class="col-md-12">
    <RadzenTemplateForm TItem="dynamic">
      <ChildContent>
       


        <RadzenHeading Size="H3" Text="Title"></RadzenHeading>
        <RadzenCard Style="background-color: aliceblue; height: 75px;">
            <RadzenTextArea Style = "height: 50px;">
            </RadzenTextArea>
        </RadzenCard>

        <RadzenHeading Size="H3" Text="Description">
        </RadzenHeading>
        <RadzenCard Style="background-color: aliceblue; height: 100px;">
            <RadzenTextArea Style = "height: 100px;">
            </RadzenTextArea>
        </RadzenCard>
        <RadzenHeading Size="H3" Text="Text content">
        </RadzenHeading>
        <RadzenCard Style="background-color: aliceblue; height: 100px;">
            <RadzenTextArea Style = "height: 100px;">
            </RadzenTextArea>
        </RadzenCard>
        <RadzenHeading Size="H3" Text="Tags">
        </RadzenHeading>
        <RadzenCard Style="background-color: aliceblue; height: 100px;">
            <RadzenTextArea Style = "height: 100px;">
            </RadzenTextArea>
        </RadzenCard>
        <RadzenHeading Size="H3" Text="Submit">
        </RadzenHeading>
        <div>
            <RadzenButton Text="Confirm" Style="background-color: green" Icon="done">
            </RadzenButton>
            <RadzenButton Text="Cancel" Style="background-color: red" Icon="close">
            </RadzenButton>
        </div>
        

      </ChildContent>
    </RadzenTemplateForm>
     </div>
    </div>
  </ChildContent>
</RadzenContent>

