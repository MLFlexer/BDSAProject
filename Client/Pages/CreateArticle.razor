@page "/CreateArticle"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@attribute [Authorize]

    <div class="row">
        <div class="col-6">
            <h1>Add new article</h1>
            <div>Preview your article on the right</div>
            <RadzenHtmlEditor @bind-Value=@value style="height: 500px; margin-bottom: 1rem;" UploadUrl="upload/image" Change=@OnChange Paste=@OnPaste Execute=@OnExecute />
               
        </div>
        
        <div class="col-6" style="background: white; margin-top: 75px; height: 500px;">
            @value
            <br/>
            @((MarkupString) value)
        </div>
    </div>
  
        

        

@code {
    string value = "";
    

    void OnPaste(HtmlEditorPasteEventArgs args)
    {
        // console.Log($"Paste: {args.Html}");
    }

    void OnChange(string html)
    {
        // console.Log($"Change: {html}");
        value = html;
    }

    void OnExecute(HtmlEditorExecuteEventArgs args)
    {
        // console.Log($"Execute: {args.CommandName}");
    }
}